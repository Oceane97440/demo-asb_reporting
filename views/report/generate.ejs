            .modal-open {
                overflow: auto !important;
            }

            body {
                background: #eee;
                font-family: Century Gothic, Verdana, Geneva, Tahoma, sans-serif;
            }

            hr {
                margin-top: 10px;
                border-color: #ddd;
            }
