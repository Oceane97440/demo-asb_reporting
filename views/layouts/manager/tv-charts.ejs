<script>
    'use strict';
    $(document).ready(function () {
      var config = {
        baseurl: "https://reporting.antennesb.fr/"
      };


      var chartCampaignUrl = config.baseurl + 't/charts/<%=campaign_crypt%>';

      $.getJSON(chartCampaignUrl, function (response) {

