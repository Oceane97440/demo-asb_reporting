        <div class="card">
            <form method="POST" action="/utilisateur/campagne_epilot/update/<%=campaign_epilot.campaign_epilot_id%>">
            <div class="card-header">
                <h5>Modifier une campagne "Epilot"</h5>
            </div>
            <div class="card-body">

                <div class="alert alert-primary">
                    <div class="media align-items-center">
                        <i class="feather icon-alert-circle h2"></i>
                        <div class="media-body ml-3">
                            Modifier une campagne sur SMARTADSERVER en toute simplicité.
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label" for="campaign_name">Nom de la campagne</label>
                    <input
                        type="text"
                        name="campaign_name"
                        id="campaign_name"
                        value="<%= campaign_epilot.campaign_name %>"
                        class="form-control"
                        placeholder="Saisissez le nom de la campagne"
                        required="required"/>
                </div>

                <div class="form-group">
                    <label class="form-label" for="advertiser_id">Format
                    </label>
                    <select
                        class="form-control"
                        id="format"
                        name="format"
                        required="required">
                        <option value="">Choisir un annonceur</option>
                        <% for (let i=0; i < formats.length; i++) { %>
                            <option value="<%= formats[i].format_group %>"><%= formats[i].format_group %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label lass="form-label" for="etat">Etat</label><br>
                    <label class="form-check-label">Confirmée</label>
                    <input class="form-check-input" type="radio" name="etat" id="etat" value="1">
                    <label class="form-check-label">Réservée</label>
                    <input class="form-check-input" type="radio" name="etat" id="etat" value="2">
    
                </div>

                <div class="form-group">
                    <label class="form-label" for="campaign_start_date">Date de début de la campagne</label>
                    <input type="date" class="form-control" name="campaign_start_date" id="campaign_start_date" value="<%= campaign_epilot.campaign_start_date %>" required>

                </div>

                <div class="form-group">
                    <label class="form-label" for="campaign_end_date">Date de fin de la campagne</label>
                    <input type="date" class="form-control" name="campaign_end_date" id="campaign_end_date" value="<%= campaign_epilot.campaign_end_date %>"  required>

                </div>

                
                <div class="form-group">
                    <label class="form-label" for="volume_prevue">Volumes</label>
                    <input
                        type="number"
                        name="volume_prevue"
                        id="volume_prevue"
                        class="form-control"
                        value="<%= campaign_epilot.volume_prevue %>"
                        placeholder="Saisissez le montant du volume prévue"
                        required="required">
                </div>

            </div>
            <div class="card-footer">
                <input
                    type="submit"
                    name="submit"
                    class="btn btn-primary mr-2 btn-submit"
                    value="Créer une nouvelle campagne"/>
            </div>
        </form>
