<%- include("../../layouts/manager/head.ejs") -%>
<!-- support-section start -->
<div class="col-xl-12 col-md-12">

    <div class="card">
        <form method="POST" action="/manager/advertisers/create">
            <div class="card-header">
                <h5>Créer un annonceur</h5>
            </div>
            <div class="card-body">


                <div class="alert alert-primary">
                    <div class="media align-items-center">
                        <i class="feather icon-alert-circle h2"></i>
                        <div class="media-body ml-3">
                            Créer un annonceur sur SMARTADSERVER en toute simplicité.
                        </div>
                    </div>
                </div>


                <% if (message) { %>
                    <div class="alert alert-<%=message.type%>" role="alert">
                        <%=message.intro%>:<%=message.message%>
                      
                    </div>
        
                    <% } %>



                <div class="form-group">
                    <label class="form-label" for="advertiser_name">Nom de l'annonceur</label>
                    <input type="text" name="advertiser_name" id="advertiser_name" class="form-control"
                        placeholder="Saisissez le nom de l'annonceur" required="required" />
                </div>

                <!-- <div class="form-group">
                    <label lass="form-label" for="archived">Status</label><br>
                    <label class="form-check-label">Archiver</label>
                    <input class="form-check-input" type="radio" name="archived" id="archived" value="1">
                    <label class="form-check-label">Non archiver</label>
                    <input class="form-check-input" type="radio" name="archived" id="archived" value="0">

                </div> -->


            </div>
            <div class="card-footer">
                <input type="submit" name="submit" class="btn btn-primary mr-2 btn-submit"
                    value="Créer un annonceur" />
            </div>
        </form>
    </div>

</div>

<%- include("../../layouts/manager/footer.ejs") -%>