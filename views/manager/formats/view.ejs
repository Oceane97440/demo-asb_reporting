        <div class="card-header">
            <div class="row">
                <div class="col-sm-9">
                    <h3>Sites</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <% if(formats_sites && (formats_sites.length > 0)) { %>
            <%- include("../inc/table_formats_sites.ejs") -%>
            <% } else { %>
            <div class="alert alert-warning alert-automate" role="alert" data-automate="format-sites">
