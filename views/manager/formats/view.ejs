<%- include("../../layouts/manager/head.ejs") -%>
<div class="col-sm-12" id="format-main">

    <div class="card" data-format_id="<%= format.format_id %>">
        <div class="card-header">
            <h1><%= format.format_name %></h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8 col-sm-12">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <span class="labelname">
                                <i class="material-icons-two-tone">info</i>
                                ID</span>:
                            <strong><%= format.format_id %></strong>
                        </li>
                        <li class="list-group-item">
                            <span class="labelname">
                                <i class="material-icons-two-tone">store</i>
                                Nom</span>:
                           <%= format.format_name %>
                        </li>
                       
                    </ul>

                    <hr />

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <span class="labelname">
                                <i class="material-icons-two-tone">history</i>
                                Derni√®re MAJ</span>:
                            <abbr title="<%= format.updated_at %>"><%= moment(format.updated_at).fromNow() %></abbr>
                        </li>
                    </ul>
                </div>

              
            </div>
        </div>
    </div>

</div>

<div class="col-sm-12" id="format-sites">
