<%- include("../layouts/admin/head.ejs") -%>

<h1>Nos Annonceurs</h1>

<div id="card-forecast" class="card">
    <div class="card-header">
        <h4 class="card-title">
            Ajout d'un annonceur
        </h4>
    </div>
    <div class="card-body">
        <form action="http://127.0.0.1:3000/api/manager/crud/add_advertiser" id="manager" method="POST">

            <div class="form-group">
                <label for="advertiser_name">Nom de la annonceur </label>
                <input type="name" class="form-control" name="advertiser_name" id="advertiser_name"
                    value="TEST API SMART" required>
            </div>



    </div>
    <div class="card-footer bg-transparent border-success justify-content-center d-flex">
        <div class="col-sm-12 text-right">
            <input type="submit" name="submit" class="btn btn-block btn-primary" value="Valider" />
        </div>
    </div>
    </form>
</div>
<br>

<div id="card-forecast" class="card">
    <div class="card-header">
        <h4 class="card-title">
            Liste des Annonceurs
        </h4>
    </div>
    <div class="card-body">



        <div class="row">
            <div class="col-lg-12 col-md-7 col-sm-4">
                <div class="table-responsive">
                    <table class="table table-striped table-dark" style="margin-top: 10px;">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Noms</th>
                                <th>Actions</th>
                            </tr>
                        </thead>

                        <% for(let i=0; i < advertiser.length; i++) {%>
                        <tbody>
                            <tr>
                                <td scope="row"><%= advertiser[i].advertiser_id %></td>
                                <td><%= advertiser[i].advertiser_name %></td>

                                <td>
                                    <a class="btn btn-sm btn-warning"
                                        href="/api/manager/crud/edit/<%= advertiser[i].advertiser_id %>"><i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <a class="btn btn-sm btn-danger"
                                        href="/api/manager/crud/delete/<%= advertiser[i].advertiser_id %>"><i class="fas fa-times-circle"></i>
                                    </a>

                                </td>

                            </tr>
                        </tbody> <!-- preview content goes here-->
                        <% } %>

                    </table>
                </div>
            </div>

        </div>



    </div>



    <%- include("../layouts/admin/footer.ejs") -%>