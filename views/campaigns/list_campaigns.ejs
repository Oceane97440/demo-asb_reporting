<%- include("../layouts/admin/head.ejs") -%>

<h1>Liste des campagnes</h1>


<div id="card-forecast" class="card">
    <div class="card-header">
        <h4 class="card-title">
            Inventaire SMART
        </h4>
    </div>
    <div class="card-body">


    
            <div class="row">
                <div class="col-lg-12 col-md-7 col-sm-4">
                    <div class="table-responsive">
                        <table class="table table-striped table-dark" style="margin-top: 10px;">
                            <thead class="thead-dark">
                                <tr>
                                    <th>#</th>
                                    <th>Noms</th>
                                    <th>Debut campagne</th>
                                    <th>Fin campagne</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>

                                <% for(let i=0; i < campaigns.length; i++) {%>
                            <tbody>
                                <tr>
                                    <td scope="row"><%= campaigns[i].campaign_id %></td>
                                    <td><%= campaigns[i].campaign_name %></td>
                                    <td><%= campaigns[i].campaign_start_date %></td>
                                    <td><%= campaigns[i].campaign_end_date %></td>
                                    <td>
                                        <a class="btn btn-sm btn-warning" href="/campagne/edit/<%= campaigns[i].campaign_id %>"><i
                                                class="fas fa-pencil-alt"></i></a>
                                        <a class="btn btn-sm btn-danger" href="/campagne/delete/<%= campaigns[i].campaign_id %>"
                                            type="button"><i class="fas fa-times-circle"></i></a>
                                    </td>
                                </tr>
                            </tbody> <!-- preview content goes here-->
                            <% } %>

                        </table>
                    </div>
                </div>

    </div>

</div>    

<%- include("../layouts/admin/footer.ejs") -%>