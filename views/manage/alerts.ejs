<%- include("../layouts/admin/head.ejs") -%>



<div id="card-forecast" class="card" style="margin-top: 30px;">
    <div class="card-header">
        <h1 class="card-title">
            Insertions par Creatives
        </h1>
    </div>

    <div class="card-body">


        <br>
        <h3>Liste des alerts</h3>
        <hr>

        <table class="table_sort">

            <thead class="text-left thead-dark">
                <tr>

                    <th scope="col">Nom des créatives </th>
                    <th scope="col">Voir les campagnes </th>
                    <th scope="col">Voir les insertions</th>
                    <th scope="col">Voir les insertions créatives </th>



                </tr>
            </thead>

            <tbody>
              

                <% for(let i=0; i < creatives.length; i++) { %>

                    
                <tr>


                    <td><%=creatives[i].creative_name%></td>

         
                    <td>
                        <a class="btn btn-sm btn-primary"
                            href = 'https://manage.smartadserver.com/gestion/smartprog2.asp?CampagneID=<%=creatives[i].insertion.campaign_id%>'>
                            Campagne </a>
                    </td>

                    <td>
                        <a class="btn btn-sm btn-primary"
                           href = 'https://manage.smartadserver.com/gestion/smartprog3.asp?InsertionID=<%=creatives[i].insertion_id%>'>
                            Insertion </a>
                    </td>
                    <td>
                        <a class="btn btn-sm btn-warning"
                          href = 'https://manage.smartadserver.com/Admin/Campagnes/Insertion/MediaCenter.aspx?insertionid=<%=creatives[i].insertion_id%>'>
                            Créative </a>
                    </td>

                

                </tr>

                <% } %>

            </tbody>
        </table>




    </div>
</div>





<%- include("../layouts/admin/footer.ejs") -%>