<% if (insertions && (insertions.length > 0)) { %>
<table class="table table-striped table-bordered">
    <thead>
        <th class="text-center">Status</th>
        <th class="text-center"><span class="fa fa-key" title="N°"><em class="d-none">N°</em></span></th>
        <th class="text-center">Nom</th>
        <th class="text-center">Campagne</th>  
        <th class="text-center">Annonceur</th> 
        <th class="text-center">Date</th>
        <th class="text-center"><span class="fa fa-cogs" title="Actions"><em class="d-none">Actions</em></span></th>
    </thead>
    <tbody>
        <% for(i = 0; i < insertions.length; i++){ %>
            <tr>
                <td><%- insertions[i].insertion_status_id -%></td>
                <td><a href="/insertions/<%- insertions[i].insertion_id -%>" title="<%- insertions[i].insertion_name -%>"><%- insertions[i].insertion_id -%></a></td>
                <td><a href="/insertions/<%- insertions[i].insertion_id -%>" title="<%- insertions[i].insertion_name -%>"><%- insertions[i].insertion_name -%></a></td>
                <td>
                    <a href="/campaigns/<%- insertions[i].campaign_id -%>" title="<%- (insertions[i].campaigns.campaign_name) ? insertions[i].campaigns.campaign_name : '-'  -%>"><%- (insertions[i].campaigns.campaign_name) ? insertions[i].campaigns.campaign_name : '-'  -%></a>
                </td>
                <td>
                    -
                </td>
                <td><%- insertions[i].insertion_start_date -%></td>
                <td>-</td>
            </tr>    
        <% } %>
    </tbody>
</table>
<% } else { %>
<div class="alert alert-danger">Aucune insertion.</div>
<% } %>